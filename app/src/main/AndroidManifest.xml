<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.livvy.loadingview">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="24" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".test.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".test.SimpleActivity"
            android:label="@string/title_activity_simple" >
        </activity>
        <activity
            android:name=".test.Example1Activity"
            android:label="@string/title_activity_example1" >
        </activity>
        <activity
            android:name=".test.Example2Activity"
            android:label="@string/title_activity_example2" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>